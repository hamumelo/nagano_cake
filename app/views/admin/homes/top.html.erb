<%= render 'admin/homes/admin_header' %>



<!--注文一覧画面-->
<div class="container">
  <div class="form-group row">
    <div class="mt-5 col-sm-2.5">
      <h5 class="bg-light"><strong>注文履歴一覧</strong></h5>
    </div>
  </div>
  
  
  
  <div class="container">
  <div class="row">
    <div class='col-md-10'>
      
      
<table class='table table-sm table-inverse table-bordered'>
  <thead>
    <tr>
      <th class="table-active" width="20%">購入日時</th>
      <th class="table-active" width="15%">購入者</th>
      <th class="table-active" width="15%">注文個数</th>
      <th class="table-active" width="15%">注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    
    
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at.to_s(:datetime_jp) %>
          <% end %>
        </td>
        <td>
          <%= order.name %>
        </td>
        <td>
          <% order.order_details.each do |orderDetail| %>
          <%= orderDetail.amount %>
          <% end %>
        </td>
        <td>
          <%= order.status %>
        </td>
  
    <% end %>
  </tbody>
 </table>
</div>
</div>
</div>

<%= paginate @orders %>