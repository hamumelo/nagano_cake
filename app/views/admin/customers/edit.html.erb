<%= render 'admin/homes/admin_header' %>


<!--商品詳細ページ-->
<div class="container">
  <div class="row">
    <div class="mt-4 mb-4 col-4">
      <h5 class="bg-light"><strong>商品詳細</strong></h5>
    </div>
  </div>
</div>
       
       
    <div class='col-md-8 offset-md-1'>
    
     <div class="row mb-2">
       <div class="col-sm-2">
        <label>会員ID</label>
       </div>
         <div class="col-sm-6">
          <%= @customer.id %>
         </div>
     </div>
    
     <div class="row mb-2">
       <div class="col-sm-2">
        <label>氏名</label>
       </div>
         <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control", placeholder:"令和" %>
         </div>
     </div>
    
     <div class="row mb-2">
       <div class="col-sm-2">
        <label>フリガナ</label>
       </div>
         <div class="col-sm-6">
          <%= @customer.first_name_kana %>  <%= @customer.last_name_kana %>
         </div>
     </div>
     
     <div class="row mb-2">
       <div class="col-sm-2">
        <label>郵便番号</label>
       </div>
         <div class="col-sm-6">
          <%= @customer.postal_code %>
         </div>
     </div>
     
     <div class="row mb-2">
       <div class="col-sm-2">
        <label>住所</label>
       </div>
         <div class="col-sm-6">
          <%= @customer.address %>
         </div>
     </div>
     
     <div class="row mb-2">
       <div class="col-sm-2">
        <label>電話番号</label>
       </div>
         <div class="col-sm-6">
          <%= @customer.telephone_number %>
         </div>
     </div>
     
     <div class="row mb-2">
       <div class="col-sm-2">
        <label>メールアドレス</label>
       </div>
         <div class="col-sm-6">
          <%= @customer.email %>
         </div>
     </div>>
     
     <div class="row mb-2">
       <div class="col-sm-2">
        <label>会員ステータス</label>
       </div>
         <div class="col-sm-6">
          <%= @customer.is_active %>
         </div>
     </div>>
     
     <div class="row mb-2">
       <div class="col-sm-2">
      　 <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-success btn-md btn-block" %>
       </div>
       <div class="col-sm-2">
      　 <%= link_to '注文履歴一覧を見る', orders_path(@order.id), class: "btn btn-success btn-md btn-block" %>
       </div>
     </div>
     
     </div>