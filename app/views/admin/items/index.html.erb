<%= render 'admin/homes/admin_header' %>


<!--商品一覧画面-->
<div class="container">
  <div class="row mt-5 ">
    <div class="col-sm-9 ml-5">
      <big class="bg-light"><strong>商品一覧</strong></big>
    </div>
    <div class="col-sm-2">
      <big><%= link_to '+', new_admin_item_path, class: "btn-sm border rounded-circle text-secondary shadow bg-white rounded" %></big>
    </div>
  </div>
  </div>
  
  
  
  <div class="container mt-3">
  <div class="row">
   <div class='col-md-10 offset-md-1'>

 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    
    
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.id %>
        </td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
          <% end %>
        </td>
        <td>
          <%= converting_to_jpy(item.price) %>
        </td>
        <td>
          <%= item.genre.name %>
        </td>
        <td>
          <% if item.is_active == true %>
          <strong class="text-success"><%= "販売中" %></strong>
          <% else %>
          <% item.is_active == false %>
          <strong class="text-secondary"><%= "販売停止中" %></strong>
          <% end %>
        </td>
  
    <% end %>
  </tbody>
 </table>
</div>
</div>
</div>

<%= paginate @items %>