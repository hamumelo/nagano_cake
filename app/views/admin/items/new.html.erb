<%= render 'admin/homes/admin_header' %>


<!--商品新規登録画面-->
<div class="container">
  <div class="form-group row">
    <div class="mt-5 col-sm-2.5">
      <h5 class="bg-light"><strong>商品新規登録</strong></h5>
    </div>
  </div>
  
  <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
      
     <div class="form-group row mx-auto mb-3">
       <div class="col-sm-2"></div>
        <div class="col-sm-2">
        <label class="form-label">商品画像</label>
        </div>
        <div class="col-sm-6">
         <%= f.attachment_field :image, class: "w-100" %>
        </div>
    </div>
      
     <div class="form-group row mx-auto mb-3">
      <div class="col-sm-2"></div>
       <div class="col-sm-2">
        <label class="form-label">商品名</label>
       </div>
         <div class="col-sm-4">
          <%= f.text_field :name, class: "form-control", placeholder:"商品名" %>
         </div>
    </div>
      
     <div class="form-group row mx-auto mb-3">
      <div class="col-sm-2"></div>
       <div class="col-sm-2">
        <label class="form-label">商品説明</label>
       </div>
         <div class="col-sm-4">
          <%= f.text_area :introduction, class: "form-control", placeholder:"ここに説明文を記述します" %>
         </div>
     </div>
      
     <div class="form-group row mx-auto mb-3">
      <div class="col-sm-2"></div>
       <div class="col-sm-2">
        <label class="form-label">ジャンル</label>
       </div>
         <div class="col-sm-4">
         <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "--選択して下さい--"}, class: "form-control") %>
         </div>
     </div>
      
     <div class="form-group row mx-auto mb-3">
      <div class="col-sm-2"></div>
       <div class="col-sm-2">
        <label class="form-label">税抜価格</label>
       </div>
         <div class="col-sm-4">
           <%= f.text_field :price, class: "form-control", placeholder:"1000" %>
          </div>
             <div class="col-sm-1">
              <span class="pr-auto form-text">円</span>
            </div>
     </div>
      
     <div class="form-group row mx-auto mb-3">
      <div class="col-sm-2"></div>
       <div class="col-sm-2">
        <label class="form-label">販売ステータス</label>
       </div>
          
         <div class="col-sm-6">
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;", class: "mr-4"} %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        </div>
      </div>
      
     <div class="form-group row mx-auto mb-3">
      <div class="col-sm-5"></div>
       <div class="col-sm-2">
        <%= f.submit '新規登録', class:"btn btn-success btn-md btn-block" %>
    <% end %>
       </div>
      </div>
     </div>