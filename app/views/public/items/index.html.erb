<%= render 'public/customers/header' %>


<div class="container mt-5">
 <div class="row">
  <div class="col-sm-2">
  <!--ジャンル検索機能-->
  </div>
  </div>
  </div>
  
<div class="container">
  <div class="row">
    <div class="mt-4 mb-4 col-4">
      <h5 class="bg-light"><strong>商品一覧</strong></h5>
    </div>
  </div>
</div>
    
    


<div class="container mt-5">
 <div class="row">
    <% @items.each do |item| %>
    <div class="col-sm-3">
      <span><%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, size: "180x104", fallback: "no_image.jpg" %>
            <% end %></span>
      <small><p><%= item.name %></p></small>
      <p>¥<%= converting_to_jpy(item.with_tax_price) %></p>
    </div>
  <% end %>
 </div>
</div>

<%= paginate @items %>