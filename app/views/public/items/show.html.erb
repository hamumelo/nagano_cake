<%= render 'public/customers/header' %>


<!--商品詳細ページ-->
<div class="container">
  <div class="row">
    <div class="mt-4 mb-4 col-4">
      <h5 class="bg-light"><strong>商品詳細</strong></h5>
    </div>
  </div>
</div>
     
  
<div class="container mt-5">
     <div class="row">
       <div class="col-md-3">
        <%= attachment_image_tag @item, :image, :fill, 320,180, format: 'jpeg', fallback: "no_image.jpg" %>
       </div>
       
    <div class='col-md-8 offset-md-1'>
    
     <div class="row mb-2">
       <div class="col-sm-7">
          <h4 class="font-weight-bold"><%= @item.name %></h4>
         </div>
     </div>
     
     <div class="row mb-2">
         <div class="col-sm-6">
          <%= @item.introduction %>
         </div>
     </div>
     
     <div class="row mt-5"></div>
     
     <div class="row mt-5">
         <div class="col-sm-6 form-inline">
          <span class="font-weight-bold"><h4>￥<%= converting_to_jpy(@item.with_tax_price) %></h4></span><small class="pl-2">(税込)</small>
         </div>
     </div>
     
     
  
    <%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>
    <%= f.hidden_field :customer_id, value: @customer.id %>
    <%= f.hidden_field :item_id, value: @item.id %>
     <div class="row mt-4">
       <div class="col-sm-3 pt-4">
        <%= f.select :amount, *[1..10], {include_blank: "個数選択"}, class: "btn-sm form-control" , required: true %>
       </div>
       <div class="col-sm-3 pt-4">
        <%= f.submit 'カートに入れる', class: "btn btn-success btn-sm btn-block" %>
       </div>
     </div>
    <% end %>
     
     </div>
     </div>