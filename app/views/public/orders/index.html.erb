<%= render 'public/customers/header' %>


<!--注文一覧画面-->
<div class="container">
  <div class="form-group row">
    <div class="mt-5 col-sm-2.5">
      <h5 class="bg-light"><strong>注文履歴一覧</strong></h5>
    </div>
  </div>
  
  
  
  <div class="container">
  <div class="row">
    <div class='col-md-12'>
      
      
<table class='table table-sm table-inverse table-bordered'>
  <thead>
    <tr>
      <th class="table-active">注文日</th>
      <th class="table-active">配送先</th>
      <th class="table-active">注文商品</th>
      <th class="table-active">支払金額</th>
      <th class="table-active">ステータス</th>
      <th class="table-active">注文詳細</th>
    </tr>
  </thead>
  <tbody>
    
    
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.created_at.to_s(:datetime_jp) %>
        </td>
        <td>
          〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td>
          <% order.order_details.each do |orderDetail| %>
          <%= orderDetail.item.name %><br>
          <% end %>
        </td>
        <td>
          <%= order.total_payment %>
        </td>
        <td>
          <%= order.status %>
        </td>
        <td>
          <%= link_to '表示する', order_path(order.id), class: "btn btn-primary btn-sm" %>
        </td>
  
    <% end %>
  </tbody>
 </table>
</div>
</div>
</div>

<%= paginate @orders %>