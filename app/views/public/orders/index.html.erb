<%= render 'admin/homes/admin_header' %>


<!--注文一覧画面-->
<div class="container">
  <div class="form-group row">
    <div class="mt-5 col-sm-2.5">
      <h5 class="bg-light"><strong>注文履歴一覧</strong></h5>
    </div>
  </div>
  
  
  
  <div class="container">
  <div class="row">
    <div class='col-md-8 offset-md-1'>

 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    
    
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at %>
          <% end %>
        </td>
        <td>
          <%= order.name %>
        </td>
        <td>
          <%= customer.email %>
        </td>
        <td>
          <%= customer.is_active %>
        </td>
  
    <% end %>
  </tbody>
 </table>
</div>
</div>
</div>

<%= paginate @customers %>