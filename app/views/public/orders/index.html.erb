<%= render 'public/customers/header' %>


<!--注文一覧画面-->
<div class="container">
  <div class="form-group row">
    <div class="mt-5 col-sm-2.5">
      <h5 class="bg-light"><strong>注文履歴一覧</strong></h5>
    </div>
  </div>
  
  
  
  <div class="container">
  <div class="row">
    <div class='col-md-12 offset-md-1'>

 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細
      </th>
    </tr>
  </thead>
  <tbody>
    
    
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.created_at %>
        </td>
        <td>
          〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td>
          <%= order.item.name %>
        </td>
        <td>
          <%= converting_to_jpy(order_price) %>
        </td>
        <td>
          <%= order.status %>
        </td>
          <%= link_to '表示する', order_path(order.id), class: "btn btn-primary btn-sm" %>
        </td>
  
    <% end %>
  </tbody>
 </table>
</div>
</div>
</div>

<%= paginate @orders %>