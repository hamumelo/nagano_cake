<%= render 'public/customers/header' %>

<!--注文履歴画面-->
<div class="container">
  <div class="form-group row">
    <div class="mt-5 col-sm-2.5">
      <h5 class="bg-light d-inline col-sm-6"><strong>注文履歴詳細</strong></h5>
    </div>
  </div>
  
  
     
  <div class="row mt-5">
    <div class='col-md-6'>
   
 <table class='table table-hover table-sm table-inverse table-bordered'>
  <thead>
    <tr>
      <th class="table-active" scope="row" width="100%">注文日</th>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <th class="table-active" scope="row" width="100%">配送先</th>
        <td>
          〒<%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
    </tr>
    <tr>
      <th class="table-active" scope="row" width="100%">支払方法</th>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <th class="table-active" scope="row" width="100%">支払方法</th>
      <td><%= @order.status %></td>
    </tr>
  </thead>
 </table>
</div>
  
    <div class='col-md-3'>
   
 <table class='table table-hover table-sm table-inverse table-bordered'>
  <thead>
    <tr>
      <th class="table-active" scope="row" width="100%">商品合計</th>
      <td><%= converting_to_jpy(@order.shipping_cost) %></td>
    </tr>
    <tr>
      <th class="table-active" scope="row" width="100%">配送料</th>
      <td><%= converting_to_jpy(@total_price) %></td>
    </tr>
    <tr>
      <th class="table-active" scope="row" width="100%">ご請求額</th>
      <td><%= converting_to_jpy(@order_price) %></td>
    </tr>
  </thead>
 </table>
</div>
</div>
</div>

<div class="container">

<div class="field row mt-2 ml-3">
  <div class="col-sm-4">
      <strong>支払方法</strong>　<%= @order.payment_method_i18n %>
  </div>
</div>

<div class="row mt-2 ml-3">
  <div class="col-sm-10">
      <strong>お届け先</strong>　<%= @order.postal_code %><%= @order.address %><br>
      　　　　　<%= @order.name %>
  </div>
</div>
</div>
        
  <div class="row mt-2">
    <div class='col-md-8 offset-md-1 text-center'>
      <%= f.submit '注文を確定する', class: "btn btn-success btn-sm" %>
    </div>
  </div>
    <% end %>