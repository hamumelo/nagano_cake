<%= render 'public/homes/top_header' %>

<!--会員新規登録画面-->
<div class="container">
  <div class="form-group row">
    <div class="mt-5 col-sm-2.5">
      <h5 class="bg-light"><strong>新規会員登録</strong></h5>
    </div>
  </div>
  
  <%= form_with model: @customer, url: customers_path, local: true do |f| %>
      
     <div class="field row mt-3">
        <div class="col-sm-2">
        <small><%= f.label :name, "名前" %></small>
        </div>
        <div class="field col-sm-3">
          <small>(姓)</small>
          <%= f.text_field :last_name, autofocus: true, placeholder:"令和", class: "form-control form-control-sm" %>
        </div>
        <div class="field col-sm-3">
          <small>(名)</small>
          <%= f.text_field :first_name, autofocus: true, placeholder:"道子", class: "form-control form-control-sm" %>
        </div>
    </div>
      
     <div class="field row mt-2">
        <div class="col-sm-2">
        <small><%= f.label :name_kana, "フリガナ" %></small>
        </div>
        <div class="field col-sm-3">
          <small>(セイ)</small>
          <%= f.text_field :last_name_kana, autofocus: true, placeholder:"レイワ", class: "form-control form-control-sm" %>
        </div>
        <div class="field col-sm-3">
          <small>(メイ)</small>
          <%= f.text_field :first_name_kana, autofocus: true, placeholder:"ミチコ", class: "form-control form-control-sm" %>
        </div>
    </div>
      
     <div class="field row mt-2">
        <div class="col-sm-2">
        <small><%= f.label :email, "メールアドレス" %></small>
        </div>
        <div class="field col-sm-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class: "form-control form-control-sm" %>
        </div>
    </div>
      
     <div class="field row mt-2">
        <div class="col-sm-2">
        <small><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></small>
        </div>
        <div class="col-sm-3">
         <%= f.number_field :postal_code, autofocus: true, placeholder:"0000000", class: "form-control form-control-sm" %>
        </div>
    </div>
      
     <div class="field row mt-2">
        <div class="col-sm-2">
        <small><%= f.label :address, "住所" %></small>
        </div>
        <div class="col-sm-6">
         <%= f.text_field :address, autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0", class: "form-control form-control-sm" %>
        </div>
    </div>
      
     <div class="field row mt-2">
        <div class="col-sm-2">
        <small><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></small>
        </div>
        <div class="col-sm-3">
         <%= f.number_field :telephone_number, autofocus: true, placeholder:"00000000000", class: "form-control form-control-sm" %>
        </div>
    </div>
      
     <div class="field row mt-2">
        <div class="col-sm-2">
        <small><%= f.label :encrypted_password, "パスワード(6文字以上)" %></small>
        </div>
        <div class="col-sm-3">
         <%= f.number_field :encrypted_password, autofocus: true, class: "form-control form-control-sm" %>
        </div>
    </div>
      
     <div class="field row mt-2">
        <div class="col-sm-2">
        <small><%= f.label :encrypted_password, "パスワード(確認用)" %></small>
        </div>
        <div class="col-sm-3">
         <%= f.number_field :encrypted_password, autofocus: true, class: "form-control form-control-sm" %>
        </div>
    </div>
      
     <div class="form-group row mt-3">
      <div class="col-sm-2"></div>
       <div class="col-sm-2">
        <%= f.submit '新規登録', class:"btn btn-success btn-md btn-block" %>
    <% end %>
       </div>
      </div>
     </div>
     
     
<div class="container">
  <div class="form-group row">
    <div class="mt-5 col-sm-2.5">
      <h5 class="bg-light"><strong>既に登録済みの方</strong></h5>
  <div class="row ml-5">
    <%= link_to 'こちら', new_session_path %>　からログインしてください。
    </div>
  </div>