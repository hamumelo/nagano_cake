<%= render 'public/homes/top_header' %>

<!--会員ログイン登録画面-->
<div class="container">
  <div class="row">
    <div class="mt-5 col-sm-2.5">
      <h5 class="bg-light"><strong>ログイン</strong></h5>
    </div>
  </div>
  <div class="row">
    <div class="mt-3 ml-2 col-sm-2.5">
      <h6 class="bg-light"><strong>会員の方はこちらからログイン</strong></h6>
    </div>
  </div>
  
  <%= form_with model: @customer, url: session_path, local: true do |f| %>
      
     <div class="field row mt-2 mx-auto">
        <div class="col-sm-1"></div>
        <div class="col-sm-2">
        <small><%= f.label :email, "メールアドレス" %></small>
        </div>
        <div class="field col-sm-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class: "form-control form-control-sm" %>
        </div>
    </div>
      
     <div class="field row mt-2 mx-auto">
        <div class="col-sm-1"></div>
        <div class="col-sm-2">
        <small><%= f.label :encrypted_password, "パスワード(6文字以上)" %></small>
        </div>
        <div class="col-sm-6">
         <%= f.number_field :encrypted_password, autofocus: true, class: "form-control form-control-sm" %>
        </div>
    </div>
      
     <div class="form-group row mt-5">
      <div class="col-sm-3"></div>
       <div class="col-sm-2">
        <%= f.submit 'ログイン', class:"btn btn-primary btn-md btn-block" %>
    <% end %>
       </div>
      </div>
     </div>
     
     
<div class="container">
  <div class="form-group row">
    <div class="mt-5 col-sm-2.5">
      <h6 class="bg-light"><strong>会員登録がお済みでない方</strong></h6>
  <div class="row ml-5">
    <%= link_to 'こちら', new_registrations_path %>　から新規登録してください。
    </div>
  </div>