<%= render 'public/homes/top_header' %>

<!--配送先登録/一覧画面-->
<div class="container">
  <div class="form-group row">
    <div class="mt-5 col-sm-2.5">
      <h5 class="bg-light"><strong>ショッピングカート</strong></h5>
    </div>
  </div>
  
  
     
     
  <div class="row mt-5">
    <div class='col-md-7 offset-md-1'>

 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th class="border border-dark bg-info">商品名</th>
      <th class="border border-dark bg-info">単価(税込)</th>
      <th class="border border-dark bg-info">数量</th>
      <th class="border border-dark bg-info">小計</th>
      <th class="border border-dark bg-info"></th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    
    
    <% @cartItems.each do |cart_item| %>
      <tr>
        <td class="border border-dark">
          <%= item.name %>
        </td>
        <td class="border border-dark">
          <%= converting_to_jpy(item.with_tax_price) %>
        </td>
    <%= form_with model: @cartItem, url: cart_items_path, local:true do |f| %>
        <td class="border border-dark">
          <%= f.select :amount, *[1..10], {include_blank: "個数選択"}, class: "btn-sm form-control" , required: true %>
      　 <%= link_to '変更', cart_items_path, class: "btn btn-success btn-sm" %>
        </td>
        <td class="border border-dark">
          <%= @cart_item.subtotal %>
        </td>
        <td class="border border-dark">
          <%= link_to "削除する", cart_item_path(cartItem.id), method: :delete, class: "btn btn-sm btn-danger destroy", "data-confirm" => "本当に消去しますか？"  %>
        </td>
    <% end %>
      </tr>
  
    <% end %>
  </tbody>
 </table>
</div>
</div>
